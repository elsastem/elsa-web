
<section id="{{context.id}}" class="{{ 'bg-light-gray' if sectionNumber % 2 }}">
    <div class="container">
        {% block head %} 
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">{{context.title}}</h2>
                <h3 class="section-subheading text-muted">{{context.subtitle}}</h3>
            </div>
        </div>
        {% endblock %} 

        {% block body %}{% endblock %}         
    </div>
</section>