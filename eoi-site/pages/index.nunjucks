{% set page_name="index" %}
{% extends 'layout.nunjucks' %}

{% block content %}

    {% set nav_class="animated" %}
    {% include 'partials/nav.nunjucks' %}

    {% for section in content.sections %}
        {% set context=section %} 
        {% include 'partials/index/' + section.id + '_section.nunjucks' %}
    {% endfor %} 
    
{% endblock %}